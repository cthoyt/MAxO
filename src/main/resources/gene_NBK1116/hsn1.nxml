              <thead>
                <tr>
                  <th id="hd_h_hsn1.T.selected_sptlc1_pathogenic_varian_1_1_1_1" valign="middle" align="left" scope="col" rowspan="1" colspan="1">DNA Nucleotide Change</th>
                  <th id="hd_h_hsn1.T.selected_sptlc1_pathogenic_varian_1_1_1_2" valign="middle" align="left" scope="col" rowspan="1" colspan="1">Predicted Protein Change</th>
