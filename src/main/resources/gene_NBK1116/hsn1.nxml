                  <td headers="hd_h_hsn1.T.selected_sptlc1_pathogenic_varian_1_1_1_1" valign="middle" align="left" scope="row" rowspan="1" colspan="1">c.398G&#x0003e;A</td>
                  <td headers="hd_h_hsn1.T.selected_sptlc1_pathogenic_varian_1_1_1_2" valign="middle" align="left" rowspan="1" colspan="1">p.Cys133Tyr</td>
