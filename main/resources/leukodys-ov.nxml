                  <td headers="hd_h_leukodys-ov.T.leukodystrophies_meeting_s_1_1_1_1" valign="middle" align="left" scope="row" rowspan="1" colspan="1"><related-object link-type="booklink" source-id="gene" document-id="lad-ad" document-type="chapter">AD adult-onset leukodystrophy</related-object> (ADLD)</td>
                  <td headers="hd_h_leukodys-ov.T.leukodystrophies_meeting_s_1_1_1_2" valign="middle" align="left" rowspan="1" colspan="1">AD</td>
                  <td headers="hd_h_leukodys-ov.T.leukodystrophies_meeting_s_1_1_1_3" valign="middle" align="left" rowspan="1" colspan="1">
                    <italic toggle="yes">LMNB1</italic>
                  </td>
